# ─── Server ─────────────────────────────────────────────────────
PORT=5000
NODE_ENV=development

# ─── MongoDB Atlas ───────────────────────────────────────────────
# Get from: https://cloud.mongodb.com
MONGODB_URI=mongodb+srv://user:password@cluster.mongodb.net/ai-ads?retryWrites=true&w=majority

# ─── JWT / Session ───────────────────────────────────────────────
JWT_SECRET=your_jwt_secret_here
SESSION_SECRET=your_session_secret_here

# ─── Google OAuth ────────────────────────────────────────────────
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# ─── URLs ────────────────────────────────────────────────────────
CLIENT_URL=http://localhost:3000      # In production: your Vercel URL
SERVER_URL=http://localhost:5000      # In production: your Render URL

# ─── Cloudinary ──────────────────────────────────────────────────
# Get from: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# ─── PhonePe Payment Gateway ─────────────────────────────────────
# Sandbox: https://developer.phonepe.com/v1/reference/pay-endpoint-1
# Production credentials from: https://business.phonepe.com
PHONEPE_MERCHANT_ID=your_merchant_id
PHONEPE_SALT_KEY=your_salt_key
PHONEPE_SALT_INDEX=1
# Sandbox URL (for testing):
# PHONEPE_API_URL=https://api-preprod.phonepe.com/apis/pg-sandbox
# Production URL:
PHONEPE_API_URL=https://api.phonepe.com/apis/hermes
